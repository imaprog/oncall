<h1>Engineers#index</h1>
<p>Find me in app/views/engineers/index.html.erb</p>
<p>Month: <%= @month.strftime("%B") %></p>

<select name="month_dropdown" onchange="location = this.value;">
 <option value="/engineers">Select Month</option>
 <option value="/engineers?month=Jan">January</option>
 <option value="/engineers?month=Feb">February</option>
 <option value="/engineers?month=March">March</option>
 <option value="/engineers?month=April">April</option>
 <option value="/engineers?month=May">May</option>
 <option value="/engineers?month=June">June</option>
 <option value="/engineers?month=July">July</option>
 <option value="/engineers?month=August">August</option>
 <option value="/engineers?month=September">September</option>
 <option value="/engineers?month=October">October</option>
 <option value="/engineers?month=November">November</option>
 <option value="/engineers?month=December">December</option>
</select>

<br><br>

<table border="1">
<thead align="center">
	<tr>
		<th>Name</th>
		<th>On-call hours this month</th>
	</tr>
</thead>	
<tbody align="center">
	<% if !@engineers.blank?
        @engineers.each do |ha| %>
		<tr>
			<td><%= ha["engineer"]["name"] %></td>
			<td><%= ha["overtimes"] %></td>
		</tr>
	<%     end 
     else %>
     <tr>
       <td colspan="2">Data Not Available</td>
     </tr>
  <% end %>
</tbody>
</table>
